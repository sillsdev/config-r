{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": [/*"@emotion/core",*/ "@emotion/react/types/css-prop", "vite/client"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    // don't let client access things that are exported only for use within this library
    "stripInternal": true
  },
  "include": ["./src", ".storybook/lib", "lib"],
  "exclude": ["node_modules"],
  // for vue-tsc
  "outDir": "dist",
  "declaration": true
}
